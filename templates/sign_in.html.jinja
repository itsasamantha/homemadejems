<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>HomeMade</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body style="background-color: #EDE8DC">
    {% include "Components/navbar.html.jinja"%}
    <h1 class = "d-flex justify-content-center p-3">Sign In</h1>
    <div class="container ">  
        {% for message in get_flashed_messages():%}
            <div class="alert alert-danger" role="alert">
                {{message}}
            </div>
        {%endfor%} 
        </div>
        <br>

    <div class = "container">
        <form class="row g-3 rounded bg-light" action = "/sign_in" method = "post">
            <div class="col-md-12">
                <label for="inputEmail4" class="form-label">Email</label>
                <input type="email" class="form-control" id="inputEmail4" name="email" required>
            </div>
            <div class="col-md-12">
                <label for="inputPassword4" class="form-label">Password</label>
                <input type="password" class="form-control" id="inputPassword4" name="password" required>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary" >Sign In</button>
            </div>
        </form>
        <a href="/sign_up" class=" d-flex justify-content-center">Don't have an account? Sign Up</a>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
