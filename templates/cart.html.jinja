<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/static/styles.css">
  </head>
  <body class="container">
    {% include "Components/navbar.html.jinja"%}
    <h1>Your Cart</h1>
    {%if products|length == 0 %}
      <h1>There is nothing in the cart yet</h1>
      {%else%}
        <div class="container table-responsive">
            <table class="table">
            <thead>
                <tr>
                <th scope="col">Product</th>
                <th scope="col"> </th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Total</th>
                <th scope="col"> </th>
                <th scope="col"> </th>
                </tr>
            </thead>
        <tbody>
            {%for item in products%}
                <tr>
                    <td><img src="{{item['image']}}" style= "width: 100px"></td>
                    <td>{{item["name"]}}</td>
                    <td>{{"%.2f" | format(item["price"])}}</td>
                    <td class= "form-outline"> <input type="number" id="typeNumber" class="form-control" value="{{item['quantity']}}" /></td>
                    <td>{{"%.2f" | format(item["price"] * item["quantity"])}}</td>
                    <td style="text-align:center;">
                      <form method="post" action = "/cart/{{item['id']}}/update">
                        <button type="submit" class="col-3 w-100 btn btn-sm"><svg viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" width="15" height="15"><path d="M7.5 14.5A7 7 0 013.17 2M7.5.5A7 7 0 0111.83 13m-.33-3v3.5H15M0 1.5h3.5V5" stroke="currentColor"></path></svg></button>
                      </form>
                    </td>
                    <td style="text-align:center;">
                      <form method="post" action = "/cart/{{item['id']}}/delete">
                        <button type="submit" class="col-3 w-100 btn btn-sm"> <svg viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" width="17" height="17"><path d="M4.5 3V1.5a1 1 0 011-1h4a1 1 0 011 1V3M0 3.5h15m-13.5 0v10a1 1 0 001 1h10a1 1 0 001-1v-10M7.5 7v5m-3-3v3m6-3v3" stroke="currentColor"></path></svg></button>
                      </form>
                    </td>

                </tr>
              {%endfor%}
      </tbody>
            
            </table>
        </div>
        {%endif%}
    


    <h2 class="p-3 text-center">Your total is: {{"%.2f" | format(total)}}</h2>
    <div class="text-center">
      <a href="/checkout" class="btn mx-auto p-2"> Checkout</a>
    </div>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>


      